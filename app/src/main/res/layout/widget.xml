<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/appwidget_dark_bg_clickable"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/on_off"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/appwidget_button_left"
        android:padding="20dp"
        android:src="@drawable/ic_action_locate" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/appwidget_button_center"
        android:padding="20dp"
        android:src="@drawable/ic_action_history" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/appwidget_button_center"
        android:padding="20dp"
        android:src="@drawable/ic_action_settings" />

    <ImageButton
        android:id="@+id/manage"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/appwidget_button_right"
        android:padding="20dp"
        android:src="@drawable/ic_action_privacy" />

</LinearLayout>